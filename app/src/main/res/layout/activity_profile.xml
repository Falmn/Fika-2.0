<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <LinearLayout
        android:id="@+id/upper_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/username_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_profile2"
            android:layout_gravity="center_horizontal"
            android:text="Username"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp" />

        <LinearLayout
            android:id="@+id/menu_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/search_user"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:background="@color/colorBackground"
                android:src="@drawable/ic_search_user"></ImageButton>

            <ImageButton
                android:id="@+id/notifications"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:background="@color/colorBackground"
                android:src="@drawable/ic_notification"></ImageButton>

            <ImageButton
                android:id="@+id/saved_posts"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:background="@color/colorBackground"
                android:src="@drawable/ic_saved"></ImageButton>

            <ImageButton
                android:id="@+id/log_out"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:background="@color/colorBackground"
                android:src="@drawable/ic_logout"></ImageButton>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menu_options">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

        </ScrollView>

    </LinearLayout>
</RelativeLayout>